<div class="container">
  <div class="row" id="row1">
    <div class="col-md-12">
      <h1 class="mainTitle">Mangé le burger!</h1>
        <img class="chef" src="https://raw.githubusercontent.com/lydmgem/Burger-Logger/master/public/assets/img/chef.png"/>
        <img class="burger" src="https://raw.githubusercontent.com/lydmgem/Burger-Logger/master/public/assets/img/burger.png"/>
    </div>
  </div>

  <div class="row" id="row2">
    <div class="col-md-8">
      <h2 class="title">Bon appétit!</h2>
        <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{burger_name}}
            {{> burgers/burger-block}}
          {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-md-4">
      <h2 class="prevTitle">Ordres Précédentes</h2>
      <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
          {{id}}
          {{burger_name}}
          </li>
        {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>

  <div class="row" id="row3">
    <div class="col-md-12">
      <div class="orderBurger">
        <h2 class="title">L'ordre</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="text" id="newBurger" name="burger">
          </div>
        <button type="submit" id="orderBtn">Order!</button>
        </form>
      </div>
    </div>
  </div>
</div>